---
export type ImageProps = {
  src?: string;
  alt?: string;
};

import ForwardArrowSVG from "@components/static/ForwardArrowSVG.astro";
export interface Props {
  title?: string;
  heading?: string;
  features?: any[];
  description?: string;
  subHeading?: string;
  banner?: ImageProps;
}

export const defaultProps = {
  title: "",
  heading: "",
  subHeading: "",
  features: [],

}

const { title, banner, heading, features, subHeading, description } = Astro.props;
---

<section class="pt-16 overflow-hidden">
  <div class="container px-4 mx-auto">
    <div class="flex flex-wrap -m-8">
      <div class="w-full p-8 md:w-1/2">
        <div
          class="inline-block px-2 py-1 mb-6 font-semibold bg-green-100 rounded-full"
        >
          <div class="flex flex-wrap items-center -m-1">
            <div class="w-auto p-1">
              <a class="text-sm" href="">{heading ?? "HEADING_NOT_FOUND"}</a>
            </div>
            <ForwardArrowSVG />
          </div>
        </div>
        <h1
          class:list={[
            "mb-6 font-serif font-bold leading-none transition-all duration-500 ease-in-out text-9xl md:text-7xl max-w-3/4 text-wrap text-shadow-xl shadow-black font-heading"
          ]}>
                    {title ?? "TITLE_NOT_FOUND"}

        </h1>
     
        <p class="text-2xl font-medium text-gray-900 mb-11 md:max-w-md">
          {subHeading ?? "SUB_HEADING_NOT_FOUND"}
        </p>



        <div class="flex flex-wrap -m-2.5 mb-20">


          <div class="w-full md:w-auto p-2.5">
            <div class="block">
              <button
                class="w-full px-6 py-4 font-semibold text-white transition duration-200 ease-in-out bg-green-600 border border-white rounded-xl focus:ring focus:ring-green-300 hover:bg-indigo-700"
                type="button">Support Us</button
              >
            </div>
          </div>

          <div class="w-full md:w-auto p-2.5">
            <div class="block">
              <button
                class="w-full py-4 font-semibold transition duration-200 ease-in-out bg-transparent border border-gray-300 px-9 hover:border-gray-400 rounded-xl focus:ring focus:ring-gray-50 hover:bg-gray-100"
                type="button"
              >
                <div class="flex flex-wrap items-center justify-center -m-1">
                  <div class="w-auto p-1">
                    <svg
                      width="19"
                      height="18"
                      viewBox="0 0 19 18"
                      fill="none"
                      xmlns="http://www.w3.org/2000/svg"
                    >
                      <path
                        d="M2.75 3.75C2.75 2.92157 3.42157 2.25 4.25 2.25H6.70943C7.03225 2.25 7.31886 2.45657 7.42094 2.76283L8.5443 6.13291C8.66233 6.48699 8.50203 6.87398 8.1682 7.0409L6.47525 7.88737C7.30194 9.72091 8.77909 11.1981 10.6126 12.0247L11.4591 10.3318C11.626 9.99796 12.013 9.83767 12.3671 9.9557L15.7372 11.0791C16.0434 11.1811 16.25 11.4677 16.25 11.7906V14.25C16.25 15.0784 15.5784 15.75 14.75 15.75H14C7.7868 15.75 2.75 10.7132 2.75 4.5V3.75Z"
                        stroke="black"
                        stroke-width="1.5"
                        stroke-linecap="round"
                        stroke-linejoin="round"></path>
                    </svg>
                  </div>
                  <div class="w-auto p-1">
                    <span>Affiliate</span>
                  </div>
                </div>
              </button>
            </div>
          </div>
        </div>
        <p class="mb-6 text-sm font-semibold text-gray-500 uppercase">
          {description ?? "DESCRIPTION_NOT_FOUND"}
        </p>

        <div class="flex flex-wrap -m-3">
          {
          features ? 
          features.map((feature) => (
          <div class="w-auto p-3">
            <img src={feature} alt="" />
          </div>
          )): 
          <></>
          }

        </div>
      </div>

      <!--@element Hero::Features -->
      <div class="w-full h-full p-8 m-0 cursor-pointer md:w-1/2">
        <img
          class:list={[
            "transition w-full object-fit min-h-64 scale-150 h-full duration-1000 ease-in-out transform hover:-translate-y-16"
          ]}
          src={banner?.image?.src ?? "https://picsum.photos/500"}
          alt={banner?.image?.alt ?? "NO_IMAGE_FOUND"}
        />
      </div>
    </div>
  </div>
</section>
