---
export type LinkProps = {
  name?: string;
  url?: string;
};

export interface Props {
  links?: LinkProps[];
}

export const defaultProps = {
  links: [
    {
      name: "Home",
      url: "/",
    },
  ],
};

const { links } = Astro.props;
---

<div class="hidden w-auto lg:block">
  <ul class="flex items-center mr-16">
    {
      links
        ? links.map((link) => (
            <li
              class:list={[
                "font-medium font-bold rounded-md hover:shadow-2xl mr-9 hover:text-gray-700",
              ]}
            >
              <a href={link?.url ?? "#"}>{link?.name}</a>
            </li>
          ))
        : defaultProps.links.map((link) => (
            <li
              class:list={[
                "font-medium font-bold rounded-md hover:shadow-2xl mr-9 hover:text-gray-700",
              ]}
            >
              <a href={link?.url ?? "#"}>{link?.name}</a>
            </li>
          ))
    }
  </ul>
</div>
