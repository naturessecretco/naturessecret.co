---
import AddToCart from "@components/static/AddToCart.astro";
import type { ImageProps } from "@typings/Image";

export type Product = {
  image?: ImageProps;
  title?: string;
  subTitle?: string;
};

export interface Props {
  title?: string;
  products?: Product[];
}

export const defaultProps = {
  title: "TITLE_NOT_FOUND",
};

const { products, title } = Astro.props;
---

<section class="relative py-20 overflow-x-hidden lg:pt-32">
  <img
    class="absolute top-0 left-0 hidden md:block"
    src="yofte-assets/elements/white-line.svg"
    alt=""
  />
  <img
    class="absolute left-0 mt-64 top-50"
    src="yofte-assets/elements/orange-line.svg"
    alt=""
  />
  <img
    class="absolute bottom-0 right-0 w-72"
    src="yofte-assets/elements/violet-line.svg"
    alt=""
  />
  <div class="container relative px-4 mx-auto">
    <h2 class="mb-16 text-4xl font-bold text-white md:text-5xl font-heading">
      {title ?? defaultProps.title}
    </h2>
    <div class="flex flex-wrap -mx-3">
      <div class="w-full px-3 mb-16 lg:w-1/3 lg:mb-0">
        <a class="block mb-10" href="">
          <div class="relative">
            <span
              class="absolute bottom-0 left-0 px-2 py-1 mb-6 ml-6 text-xs font-bold text-red-500 bg-white border-2 border-red-500 rounded-full font-heading"
              >-15%</span
            >
            <img
              class="object-cover w-full h-96"
              src="yofte-assets/images/placeholder-playing-tennis.png"
              alt=""
            />
          </div>
          <div class="mt-12">
            <div class="mb-2">
              <h3 class="mb-3 text-3xl font-bold text-white font-heading">
                Tennis racket Sanks 2
              </h3>
              <p class="text-xl font-bold text-white font-heading">
                <span>$295.30</span>
                <span
                  class="text-xs font-semibold text-gray-500 line-through font-heading"
                  >$330.90</span
                >
              </p>
            </div>
          </div>
        </a>
        <AddToCart />
      </div>
      <div class="w-full px-3 mb-16 lg:w-1/3 lg:mb-0">
        <a class="block mb-10" href="#">
          <div class="relative">
            <span
              class="absolute bottom-0 left-0 px-2 py-1 mb-6 ml-6 text-xs font-bold text-red-500 bg-white border-2 border-red-500 rounded-full font-heading"
              >-15%</span
            >
            <img
              class="object-cover w-full h-96"
              src="yofte-assets/images/product-bottle.png"
              alt=""
            />
          </div>
          <div class="mt-12">
            <div class="mb-2">
              <h3 class="mb-3 text-3xl font-bold text-white font-heading">
                LIFE Bottle (2)
              </h3>
              <p class="text-xl font-bold text-white font-heading">
                <span>$32.30</span>
                <span
                  class="text-xs font-semibold text-gray-500 line-through font-heading"
                  >$49.90</span
                >
              </p>
            </div>
          </div>
        </a>
        <AddToCart />
      </div>
      <div class="w-full px-3 lg:w-1/3">
        <a class="block mb-10" href="#">
          <div class="relative">
            <span
              class="absolute bottom-0 left-0 px-2 py-1 mb-6 ml-6 text-xs font-bold text-red-500 bg-white border-2 border-red-500 rounded-full font-heading"
              >-15%</span
            >
            <img
              class="object-cover w-full h-96"
              src="yofte-assets/images/placeholder-surfing-blue.png"
              alt=""
            />
          </div>
          <div class="mt-12">
            <div class="mb-2">
              <h3 class="mb-3 text-3xl font-bold text-white font-heading">
                VONeon Board Surfing
              </h3>
              <p class="text-xl font-bold text-white font-heading">
                <span>$295.30</span>
                <span
                  class="text-xs font-semibold text-gray-500 line-through font-heading"
                  >$330.90</span
                >
              </p>
            </div>
          </div>
        </a>
        <AddToCart />
      </div>
    </div>
  </div>
</section>
