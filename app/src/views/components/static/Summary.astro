---
export interface Props {
  title?: string;
  heading?: string;
  description?: string;
  details?: any[];
}

export type DetailProps = {
  name?: string;
  description?: string;
};
export const defaultProps = {
  title: "[@props]: TITLE_NOT_FOUND",
  heading: "[@props]: HEADING_NOT_FOUND",
  description: "[@props]: DESCRIPTION_NOT_FOUND",
};

const { title, heading, description, details } = Astro.props;
---

<section class="py-20 md:py-40">
  <div class="container px-4 mx-auto">
    <div class="flex flex-wrap -mx-4">
      <div class="w-full lg:w-1/3 px-4 mb-20 lg:mb-0">
        <div class="sm:max-w-sm">
          <div
            class="inline-flex px-5 py-2 items-center mb-8 bg-gray-900 rounded-full"
          >
            <span class="block w-2 h-2 mr-2 rounded-full bg-blue-500"></span>
            <span class="uppercase text-sm text-gray-200 font-medium"
              >{heading ?? defaultProps.heading}</span
            >
          </div>
          <h1
            class="text-5xl xs:text-7xl md:text-8xl font-heading font-semibold text-white mb-18"
          >
            {title ?? defaultProps.title}
          </h1>
          <p class="text-2xl text-gray-200 mb-20">
            {description ?? defaultProps.description}
          </p>
          <img
            class="h-142 w-full max-w-md rounded-4xl"
            src="suncealand-assets/images/laptop-on-table-photo.png"
            alt=""
          />
        </div>
      </div>
      <div class="w-full lg:w-2/3 px-4">
        <div class="lg:max-w-lg xl:max-w-3xl lg:ml-auto lg:pt-52">
          {
            details ? (
              details.map((detail) => (
                <button class="group block mb-6 w-full text-left pb-5 border-b border-gray-600">
                  <div class="flex items-start justify-between">
                    <div class="max-w-lg pr-4">
                      <h4 class="text-3xl font-medium text-white">
                        {detail?.name ?? "DETAIL_NOT_FOUND"}
                      </h4>
                      <p class="hidden group-hover:block mt-5 text-lg text-gray-200">
                        {detail?.description ?? "DETAIL_NOT_FOUND"}
                      </p>
                    </div>
                    <div class="flex-shrink-0 group-hover:hidden flex w-14 h-14 items-center justify-center bg-indigo-500 rounded-full">
                      <svg
                        width="16"
                        height="16"
                        viewbox="0 0 16 16"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <>
                          <rect
                            x="16"
                            y="7"
                            width="2"
                            height="16"
                            rx="1"
                            transform="rotate(90 16 7)"
                            fill="white"
                          />
                          <rect
                            x="7"
                            width="2"
                            height="16"
                            rx="1"
                            fill="white"
                          />
                        </>
                      </svg>
                    </div>
                    <div class="flex-shrink-0 hidden group-hover:flex w-14 h-14 items-center justify-center bg-gray-800 rounded-full">
                      <svg
                        width="16"
                        height="2"
                        viewbox="0 0 16 2"
                        fill="none"
                        xmlns="http://www.w3.org/2000/svg"
                      >
                        <rect
                          x="16"
                          width="2"
                          height="16"
                          rx="1"
                          transform="rotate(90 16 0)"
                          fill="white"
                        />
                      </svg>
                    </div>
                  </div>
                </button>
              ))
            ) : (
              <>
                <a
                  class="group relative inline-block h-16 w-full sm:w-40 bg-white rounded"
                  href="#"
                >
                  <div class="absolute top-0 left-0 transform -translate-y-1 -translate-x-1 w-full h-full group-hover:translate-y-0 group-hover:translate-x-0 transition duration-300">
                    <div class="flex h-full w-full items-center justify-center bg-blue-500 border-2 border-white rounded">
                      <span class="text-base font-semibold uppercase">
                        DETAIL_NOT_FOUND  
                      </span>
                    </div>
                  </div>
                </a>
              </>
            )
          }
        </div>
      </div>
    </div>
  </div>
</section>
