---
export interface Props {
  text?: any;
}
export const defaultProps = {
  text: "[@props]: TEXT_NOT_FOUND",
};

const { text } = Astro.props;
---

<div
  class="inline-flex items-center px-5 py-2 mb-8 bg-yellow-500 bg-opacity-50 rounded-full shadow-md"
>
  <span class="block w-2 h-2 mr-2 bg-green-500 rounded-full"></span>
  <span class="text-sm font-medium text-gray-800 uppercase"
    >{text ?? defaultProps.text}</span
  >
</div>
