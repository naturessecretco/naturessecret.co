---
export type ActionProps = {
  name?: string;
  actionFn?: Function;
};

export interface Props {
  actions?: ActionProps[];
}

export const defaultProps = {
  actions: [
    ...new Array(7).map((i) => ({
      name: `${i}_action`,
    })),
  ],
};

const { actions } = Astro.props;
---

<div class="flex flex-wrap -m-2.5 mb-20">
  {
    actions &&
      actions.map((action) => {
        return (
          <div class="w-full md:w-auto p-2.5">
            <div class="block">
              <button
                class="w-full px-6 py-4 font-semibold text-white transition duration-200 ease-in-out bg-green-600 border border-white rounded-xl focus:ring focus:ring-green-300 hover:bg-indigo-700"
                type="button"
              >
                {action.name}
              </button>
            </div>
          </div>
        );
      })
  }
</div>
