---
export interface Props {
  mailingAddress?: {
    primary?: string;
    secondary?: string;
  };
  title?: string;
}

export const defaultProps = {
  title: "[@props]: TITLE_NOT_FOUND",
  mailingAddress: {
    primary: "[@props]: PRIMARY_MAILING_ADDRESS_NOT_FOUND",
    secondary: "[@props]: SECONDARY_MAILING_ADDRESS_NOT_FOUND",
  },
};

const { mailingAddress, title } = Astro.props;
---

<div class:list={["flex cursor-pointer border flex-wrap -m-3"]}>
  <div class="w-full p-3 md:w-1/3">
    <div
      class="w-full h-full text-center rounded-lg p-11 bg-opacity-90"
    >
      <div
        class="relative w-16 h-16 mx-auto mb-6 bg-white border rounded-full border-blueGray-200"
      >
        <div
          class="absolute transform -translate-x-1/2 -translate-y-1/2 left-1/2 top-1/2"
        >
          <svg
            width="32"
            height="33"
            viewbox="0 0 32 33"
            fill="none"
            xmlns="http://www.w3.org/2000/svg"
          >
            <path
              d="M4 7.16667C4 5.69391 5.19391 4.5 6.66667 4.5H11.039C11.6129 4.5 12.1224 4.86724 12.3039 5.4117L14.301 11.4029C14.5108 12.0324 14.2258 12.7204 13.6324 13.0172L10.6227 14.522C12.0923 17.7816 14.7184 20.4077 17.978 21.8773L19.4828 18.8676C19.7796 18.2742 20.4676 17.9892 21.0971 18.199L27.0883 20.1961C27.6328 20.3776 28 20.8871 28 21.461V25.8333C28 27.3061 26.8061 28.5 25.3333 28.5H24C12.9543 28.5 4 19.5457 4 8.5V7.16667Z"
              stroke="#4F46E5"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"></path>
          </svg>
        </div>
      </div>
      <h3 class="mb-3 text-xl font-bold leading-snug font-heading">
        {title ?? defaultProps.title}
      </h3>
      <p class="font-medium leading-relaxed">
        {mailingAddress?.primary ?? defaultProps.mailingAddress.primary}
      </p>
      <p class="font-medium leading-relaxed">
        {mailingAddress?.secondary ?? defaultProps.mailingAddress.secondary}
      </p>
    </div>
  </div>
</div>
