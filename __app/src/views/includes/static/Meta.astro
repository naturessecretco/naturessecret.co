---
import { SEO } from "astro-seo";

export interface Props {
  title?: string;
  pageTitle?: string;
  description?: string;
  twitter?: {
    creator?: string;
  };
}

export const defaultProps: Props = {
  title: "Nature's Secret",
  pageTitle: "PAGE_TITLE_NOT_FOUND",
  description: "DESCRIPTION_NOT_FOUND",
  twitter: {
    creator: "CREATOR_NOT_FOUND",
  },
};

const { title, pageTitle, description, twitter } = Astro.props;
---

<head>
  <SEO
    title={`${pageTitle ?? defaultProps.pageTitle} | ${
      title ?? defaultProps.title
    }`}
    description={`${description ?? defaultProps.description}`}
    twitter={{
      creator: `@${twitter?.creator ?? defaultProps.twitter.creator}`,
    }}
  />
  <meta charset="UTF-8" />
  <meta http-equiv="refresh" content="2400" />
  <link rel="preconnect" href="https://fonts.googleapis.com" />
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  <link
    href="https://fonts.googleapis.com/css2?family=Overpass&display=swap"
    rel="stylesheet"
  />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <meta http-equiv="X-UA-Compatible" content="ie=edge" />
</head>
