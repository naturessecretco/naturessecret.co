---
export interface Props {
  height?: string | number;
  width?: string | number;
  color?: string;
}

export const defaultProps = {
  height: 15,
  width: 15,
  color: "black",
};

const { height, width, color } = Astro.props;
---

<div class:list={["w-auto p-1"]}>
  <svg
    width={`${width ?? defaultProps.width}`}
    height={`${height ?? defaultProps.height}`}
    viewBox={`0 0 ${width ?? defaultProps.width} ${
      height ?? defaultProps.height
    }`}
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path
      d="M8.66667 3.41675L12.75 7.50008M12.75 7.50008L8.66667 11.5834M12.75 7.50008L2.25 7.50008"
      stroke={color ?? defaultProps.color}
      stroke-width="1.5"
      stroke-linecap="round"
      stroke-linejoin="round"></path>
  </svg>
</div>
